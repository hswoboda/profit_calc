<body>

  <div class="container">
    <h2>Calculadora de Juros Compostos</h2>

    <label for="valor">Valor inicial (R$):</label>
    <input type="number" id="valor" placeholder="Digite o valor">

    <label for="dias">Número de dias:</label>
    <input type="number" id="dias" placeholder="Digite os dias">

    <div class="options">
      <button id="opt1" class="option">Opção 1</button>
      <button id="opt2" class="option">Opção 2</button>
    </div>

    <button class="calc-btn" onclick="calcular()">Calcular</button>

    <div class="result" id="resultado"></div>
  </div>

  <script>
    let juros = 0;
    let comissao = 0;

    const opt1 = document.getElementById("opt1");
    const opt2 = document.getElementById("opt2");

    opt1.addEventListener("click", () => {
      juros = 4.3;
      comissao = 2.5;
      opt1.classList.add("active");
      opt2.classList.remove("active");
    });

    opt2.addEventListener("click", () => {
      juros = 6.0;
      comissao = 4.0;
      opt2.classList.add("active");
      opt1.classList.remove("active");
    });

    function calcular() {
      const valor = parseFloat(document.getElementById("valor").value);
      const dias = parseInt(document.getElementById("dias").value);
      const resultado = document.getElementById("resultado");

      if (!valor || !dias || juros === 0) {
        resultado.textContent = "Preencha todos os campos e escolha uma opção.";
        resultado.style.color = "red";
        return;
      }

      const taxaEfetiva = (juros - comissao) / 100;
      const valorFinal = valor * Math.pow(1 + taxaEfetiva, dias);

      resultado.style.color = "#000";
      resultado.textContent = `Valor final: R$ ${valorFinal.toFixed(2)}`;
    }
  </script>

</body>
</html>
